{
  "name": "algor-orchestrator",
  "version": "1.0.0",
  "private": true,
  "description": "Multi-tenant messaging orchestration platform for Algoritmika partners",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "db:generate": "pnpm --filter @algor/db generate",
    "db:push": "pnpm --filter @algor/db push",
    "db:migrate": "pnpm --filter @algor/db migrate:dev",
    "db:studio": "pnpm --filter @algor/db studio",
    "seed": "pnpm --filter @algor/db seed",
    "up": "docker compose up -d",
    "down": "docker compose down",
    "logs": "docker compose logs -f",
    "clean": "turbo run clean && rm -rf node_modules",
    "typecheck": "turbo run typecheck"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "eslint": "^8.55.0",
    "prettier": "^3.1.1",
    "turbo": "^1.11.2",
    "typescript": "^5.3.3",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0"
  },
  "packageManager": "pnpm@8.12.0",
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}

